riak_running()
{
        local pid result ps
        pid=`<%= node['riak']['bin_dir'] %>/riak getpid`
        result=`echo $?`
        if [ "$result" == 0 ]; then
                ps=`ps -waux | grep ${pid} | grep riak`
                result=`echo $?`
                if [ "$result" ]; then
                        return 0
                else
                        return 1
                fi
        else
                return 1
        fi
